        xmlns:local="clr-namespace:Bulletin_impot"
        mc:Ignorable="d"
        Title="Calcul d'Impot au Sénégal " Height="892.404" Width="907.96">
    <Grid Margin="10,10,0,19" RenderTransformOrigin="0.502,0.46">
